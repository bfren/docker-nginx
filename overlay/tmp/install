#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Add www user.
#======================================================================================================================

bf-adduser www


#======================================================================================================================
# Get Nginx Version.
#======================================================================================================================

cd /tmp

VERSION=$(cat NGINX_BUILD)
bf-debug "Nginx version ${VERSION}."


#======================================================================================================================
# Install Nginx and dependencies.
#======================================================================================================================

bf-echo "Installing Nginx v${VERSION}..."
apk add --no-cache \
    ca-certificates \
    nginx=${VERSION}
bf-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bf-echo "Cleaning up default Nginx configuration and files..."
CONF_D=/etc/nginx/conf.d
HTTP_D=/etc/nginx/http.d
rm -rf ${CONF_D} ${HTTP_D} /var/www/*

bf-echo "Removing .empty files..."
rm /var/lib/nginx/.empty
rm /var/run/nginx/.empty


#======================================================================================================================
# Create and link Nginx directories.
#======================================================================================================================

bf-debug "Linking Nginx directories."
mkdir -p ${HTTP_D} && ln -s ${HTTP_D} ${CONF_D} # older builds of Nginx use conf.d instead of http.d

bf-debug "Linking /www to /var/www/localhost."
ln -s /www /var/www/localhost
